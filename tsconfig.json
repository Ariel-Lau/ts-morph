{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "strict":  true,
        "sourceMap": false,
        "removeComments": false,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "stripInternal": true,
        "typeRoots": [ "node_modules/@types/" ],
        "types": [ "node", "mocha" ]
    },
    "compileOnSave": false
}
